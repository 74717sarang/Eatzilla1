package com.array;

public class CountOfChar {

	
	public static void main(String[] args) {
		String str="I amm an Indian";
		
         char[]arr=str.toCharArray();
        int count;
         
         for(int i=0;i<str.length();i++) {
        	 count=0;
        	 for(int j=1;j<str.length();j++) {
        		 if(arr[i]==arr[j]) {
        			 count++;
        			 
        		 }
        	 }
        	
        	 System.out.println(arr[i]+"="+count);
         }
	 
	
	
	} 
	
}
